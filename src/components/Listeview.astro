---
const { product } = Astro.props;
---

<article class="card">
  <a href={`/product/${product.id}/`}> <img src={product.image} alt="billede af tÃ¸j " /></a>
  <p class="name">{product.name}</p>
  <p><strong>{product.size}</strong> {product.brand}</p>
  <p>{product.closet}</p>
</article>
<style>
  .card img {
    width: 100%;
    border-radius: 10px;
  }

  .card img:hover {
    opacity: 50%;
    transform: scale(1.02);
    transition: transform 0.3s ease-in-out;
  }

  .name {
    text-align: center;
    text-transform: uppercase;
    color: #393903;
    font-family: "Crimson Pro";
    margin: 0;
    font-weight: 500;
  }

  p {
    text-align: center;
    color: #393903;
    font-family: "Crimson Pro";
    margin-top: 0;
    font-weight: 300;
  }

  @media (min-width: 640px) and (max-width: 1024px) {
    p {
      font-size: 20px;
    }
  }

  @media (min-width: 1024px) {
    .name {
      font-size: 24px;
    }

    p {
      font-size: 24px;
    }

    .card img {
      border-radius: 20px;
    }
  }
</style>
