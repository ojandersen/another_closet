---
import Layout from "../layouts/Layout.astro";
---

<section class="medlem">
  <div class="medlemmer_tekst">
    <h2>TØJ TIL LEJE</h2>
    <p class="p_medlem">
      Skal du til en helt speciel fest?<br />

      Lej eksklusive kjoler og sæt for 300 kr. i én uge.
    </p>
    <a href="/community"
      ><div class="button">
        <p>SE MERE OM <br />TØJ TIL LEJE HER</p>
      </div></a
    >
  </div>
  <div class="medlemmer_billed">
    <img src="/public/forside2.png" alt="Billeder af venner" />
  </div>
</section>

<style>
  * {
    box-sizing: border-box;
  }
  .medlem {
    display: grid;
    color: #f4f1e8;
    background-color: #393903;
    padding-top: 0%;
  }
  .medlemmer_tekst h2 {
    font-size: clamp(3rem, 4vw, 5.5rem);
    font-family: "Crimson Pro", serif;
    font-weight: 300;
    line-height: 1;
    margin-bottom: -10px;
    text-align: center;
  }

  .medlemmer_tekst {
    width: 80vw;
    height: auto;
    margin: 0 auto;
  }

  .p_medlem {
    font-size: 20px;
    color: #f4f1e8;
    text-align: center;
    font-family: "Crimson Pro", serif;
    margin: 0 auto;
    padding: 2rem;
    font-weight: 200;
    line-height: 1.3;
  }
  .medlemmer_billed {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90vw;
    max-width: 100vw;
    height: auto;
    margin: 0 auto;
    object-fit: cover;
  }

  .medlemmer_billed img {
    width: 80%;
    height: auto;
    max-width: 100vw;
    object-fit: cover;
    padding-bottom: 8%;
    padding-top: 8%;
  }

  a {
    text-decoration: none;
  }

  .button {
    place-self: center;
    background-color: #f4f1e8;
    width: 190px;
    height: 50px;
    border-radius: 2rem;
    text-align: center;
  }

  .button p {
    color: #393903;
    padding-top: 5%;
    font-size: 12px;
    letter-spacing: 1px;
    font-weight: 600;
  }

  @media (min-width: 800px) {
    .medlem {
      grid-template-columns: 1fr 1fr;
    }
    .medlemmer_tekst {
      grid-column: 1 / 2;
      grid-row: 1;
      width: 50vw;
    }
    .medlemmer_billed {
      grid-column: 2 / 3;
      grid-row: 1;
      width: 50vw;
    }
    .medlemmer_billed img {
      width: 80%;
      height: auto;
      padding-top: 8%;
      padding-bottom: 8%;
      object-fit: cover;
    }
    .medlemmer_tekst h2 {
      font-size: clamp(3rem, 5vw, 8rem);
      padding-top: 5%;
    }
    .p_medlem {
      font-size: 30px;
      width: 70%;
      margin-top: 30px;
    }

    .button {
      width: 300px;
      height: 80px;
      border-radius: 4rem;
      text-align: center;
      margin-bottom: 10%;
    }

    .button p {
      padding-top: 5%;
      font-size: 20px;
    }
  }
</style>
