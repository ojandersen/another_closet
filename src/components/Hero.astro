---
import Layout from "../layouts/Layout.astro";
import Banner from "./Banner.astro";
---

<header>
  <div class="header_content">
    <section class="overskrift"><p>ANOTHER CLOSET</p></section>
    <section class="menu_liste">
      <ul class="desk_points">
        <li>BLIV MEDLEM</li>
        <li>LOG IND</li>
      </ul>
    </section>
    <nav class="burger-menu">
      <input type="checkbox" id="menu-toggle" />
      <label for="menu-toggle" class="menu-icon">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <ul class="menu">
        <p class="menu_overskrift">ANOTHER CLOSET</p>
        <p>_______________________</p>
        <li><a href="">BLIV MEDLEM</a></li>
        <li><a href="">FIND DIT TØJFÆLLESSKAB</a></li>
        <li><a href="">TØJ TIL LEJE</a></li>
        <li><a href="">OM OS</a></li>
        <li><a href="">LOG IND</a></li>
        <p>_______________________</p>
        <section class="icons_menu">
          <img src="/logo-facebook.svg" alt="" /><img src="logo-instagram.svg" alt="" />
        </section>
      </ul>
    </nav>
  </div>
</header>
<div class="hero_pic">
  <img src="/herop.svg" alt="" />
</div>
<style>
  html,
  * {
    padding: 0;
    margin: 0;
  }
  header {
    background-color: #f4f1e8;
  }
  .header_content {
    display: flex;
    justify-content: space-between;
  }
  ul {
    list-style: none;
    display: flex;
    gap: 2rem;
  }
  .overskrift {
    margin: 3% 3% 3% 1%;
    font-size: 20px;
  }
  .menu_liste {
    margin: 3.5%;
  }
  img {
    width: 100%;
    display: block;
  }

  .burger-menu {
    position: relative;
    margin: 3%;
  }

  .menu-icon {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .menu-icon span {
    display: block;
    height: 1px;
    width: 36px;
    background: black;
    border-radius: 2px;
    transition: all 0.3s ease-in-out;
  }

  #menu-toggle {
    display: none;
  }

  #menu-toggle:checked + .menu-icon span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  #menu-toggle:checked + .menu-icon span:nth-child(2) {
    opacity: 0;
  }

  #menu-toggle:checked + .menu-icon span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .menu {
    display: none;
    list-style: none;
    margin: 0;
    padding: 30px;
    background: #d7d8c9;
    color: #393903;
    position: absolute;
    top: 192%;
    right: -80%;
    text-align: center;
    font-size: 30px;
    z-index: 4;
  }

  #menu-toggle:checked ~ .menu {
    display: block;
  }

  .menu li {
    padding: 30px;
    font-size: 20px;
  }

  .menu a {
    text-decoration: none;
    color: #393903;
    transition: color 0.2s;
  }

  .menu a:hover {
    color: white;
  }
  .icons_menu {
    display: flex;
    justify-content: center;
  }
  .icons_menu img {
    width: 15%;
    padding: 2% 10% 0 10%;
  }
  .menu_overskrift {
    margin: 15px;
  }
  .desk_points {
    display: none;
  }
</style>
