<style>
  html,
  * {
    padding: 0;
    margin: 0;
    font-family: "Crimson Pro";
  }

  a {
    text-decoration: none;
  }
  header {
    background-color: #f4f1e8;
    font-family: "Crimson Pro";
  }
  .header_content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  ul {
    list-style: none;
    display: flex;
    gap: 0.9rem;
  }
  .overskrift {
    margin: 2%;
    font-size: 20px;
    font-family: "Crimson Pro";
    color: #393903;
    letter-spacing: 2px;
    font-weight: 300;
    margin-left: 3%;
  }
  .menu_liste {
    display: none;
    margin-left: auto;
    padding-right: 40px; /* Juster afstanden til højre */
  }

  .hero_pic img {
    width: 100%;
    display: block;
  }

  .burger-menu {
    margin-right: 3%; /* Optional: Adjust spacing from the right */
    display: flex; /* Ensures proper alignment of its children */
    align-items: center; /* Aligns the menu icon vertically */
  }

  .menu-icon {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 18px;
    cursor: pointer;
    z-index: 100;
  }

  li {
    color: #393903;
    font-family: "Crimson Pro";
    letter-spacing: 1px;
  }
  .menu-icon span {
    display: block;
    height: 1px;
    width: 100%;
    background: black;
    border-radius: 2px;
    transition: all 0.3s ease-in-out;
    z-index: 100;
  }

  #menu-toggle {
    display: none;
  }

  #menu-toggle:checked + .menu-icon span:nth-child(1) {
    transform: rotate(45deg) translate(6.5px, 5px);
  }

  #menu-toggle:checked + .menu-icon span:nth-child(2) {
    opacity: 0;
  }

  #menu-toggle:checked + .menu-icon span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -5px);
  }

  .menu {
    list-style: none;
    margin: 0;
    padding: 30px;
    padding-top: 13%;
    background: #d7d8c9;
    color: #393903;
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    width: 300px;
    text-align: center;
    font-size: 30px;
    z-index: 4;
    display: flex;
    flex-direction: column;
    align-items: center;

    /* Skjul med transform */
    transform: translateX(100%);
    opacity: 0;
    pointer-events: none;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  #menu-toggle:checked ~ .menu {
    transform: translateX(0);
    opacity: 1;
    pointer-events: auto;
  }

  .menu_overskrift {
    font-size: 33px;
  }
  .menu li {
    padding: 30px;
    font-size: 24px;
  }
  .menu li.no-style {
    padding: 0 !important; /* Tvinger padding til at være 0 */
    margin: 0;
    list-style: none;
  }
  .menu a {
    text-decoration: none;
    color: #393903;
    transition: color 0.2s;
  }

  .menu a:hover {
    color: white;
  }
  .icons_menu {
    display: flex;
    justify-content: center;
  }
  .icons_menu img {
    width: 30%;
    padding: 2% 10% 0 10%;
    cursor: pointer;
  }
  @media (min-width: 840px) {
    .overskrift {
      margin: 1.2%;
      font-size: 28px; /* Adjust the font size for the header text */
      margin-left: 2%;
    }
    .menu_liste {
      display: block;
    }
    .bm,
    .logind {
      display: none;
    }
    .menu li {
      font-size: 30px;
    }
    .menu_overskrift {
      font-size: 33px;
      margin: 20px 0;
    }
    .menu {
      padding-top: 7.5%;
    }
    .desk_points li {
      cursor: pointer;
    }
    .burger-menu {
      margin-right: 2%; /* Optional: Adjust spacing from the right */
      display: flex; /* Ensures proper alignment of its children */
      align-items: center; /* Aligns the menu icon vertically */
    }
  }
</style>
