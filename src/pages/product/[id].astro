---
//@ts-nocheck

import Layout from "../../layouts/Layout.astro";
import Banner from "../../components/Banner.astro";

export async function getStaticPaths() {
  const curl = "  https://weydcspvvunwbeoolpli.supabase.co/rest/v1/AnotherCloset?select=*";

  const apikey = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6IndleWRjc3B2dnVud2Jlb29scGxpIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDc2NDY5MDMsImV4cCI6MjA2MzIyMjkwM30.n23gpeZ4XikBpL5r_vuSYntCRJLQ7lqiLq92_HovPJo";

  const options = {
    headers: {
      apikey: apikey,
    },
  };
  const response = await fetch(curl, options);
  const data = await response.json();

  return data.map((post) => {
    return {
      params: { id: post.id.toString() },
      props: { post },
    };
  });
}

const { id } = Astro.params;
const { post } = Astro.props;
---

<Layout>
  <section class="single_view">
    <div class="billede">
      <img src={post.image} alt="billede af tøj" />
    </div>
    <div>
      <h2>{post.name}</h2>
      <p><strong>{post.brand}</strong></p>
      <p>{post.description}</p>
      <p><strong>Størrelse:</strong> {post.size}</p>
      <p><strong>Stand:</strong> {post.condition}</p>
      <p><strong>Vask:</strong> {post.wash}</p>
      <p><strong>Ejer:</strong> {post.owner}</p>
      <p>Dette stykke tøj tilhører klædeskabet <br /> <strong>{post.closet}</strong></p>
    </div>
  </section>
  <Banner />
</Layout>

<style>
  .single_view {
    background-color: #f2dfd5;
    align-items: center;
    padding-bottom: 5%;
    padding-top: 10%;
  }

  .billede {
    text-align: center;
  }

  .billede img {
    width: 70%;
    border-radius: 10px;
  }
  h2 {
    color: #393903;
    text-align: center;
    text-transform: uppercase;
    font-family: "Crimson Pro";
    font-weight: 300;
    font-size: 32px;
  }
  p {
    color: #393903;
    text-align: center;
    padding-left: 20%;
    padding-right: 20%;
    font-size: 15px;
    font-family: "Crimson Pro";
  }

  @media (min-width: 768px) and (max-width: 1200px) {
    .single_view {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding-bottom: 5%;
      padding-top: 5%;
    }

    .billede {
      text-align: center;
      padding-left: 10%;
    }

    .billede img {
      width: 90%;
      margin-top: 8%;
      border-radius: 10px;
    }

    h2 {
      font-size: 40px;
      margin-top: 0;
      padding-left: 10%;
      padding-right: 10%;
    }
    p {
      color: #393903;
      text-align: center;
      padding-left: 10%;
      padding-right: 10%;
      font-size: 18px;
    }
  }

  @media (min-width: 1200px) {
    .single_view {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding-bottom: 5%;
      padding-top: 0%;
    }

    .billede img {
      width: 80%;
      margin-top: 8%;
      border-radius: 10px;
    }

    h2 {
      font-size: 76px;
      margin-top: 0;
      padding-left: 10%;
      padding-right: 10%;
    }
    p {
      padding-left: 20%;
      padding-right: 20%;
      font-size: 24px;
    }
  }
</style>
